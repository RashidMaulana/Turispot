<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescActivity">


    <com.google.android.material.navigation.NavigationView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="360dp"
        android:background="@drawable/shape_rectt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imBtnBck"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:minWidth="35dp"
            app:srcCompat="@drawable/ss"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </com.google.android.material.navigation.NavigationView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="390dp"
        android:layout_height="261dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rect"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/imRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tamanSari"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:contentDescription="@string/tamansari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tamansari" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Deskripsi"
        android:textAlignment="gravity"
        android:textColor="#0C9955"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txFitur" />

    <TextView
        android:id="@+id/txFitur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Features"
        android:textAlignment="center"
        android:textColor="#0c9955"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imMaps" />

    <TextView
        android:id="@+id/txNoHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:text="088888888888"
        app:layout_constraintStart_toEndOf="@+id/imGuider"
        app:layout_constraintTop_toBottomOf="@+id/txFitur" />

    <ImageView
        android:id="@+id/imGuider"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="172dp"
        android:layout_weight="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txFitur"
        app:srcCompat="@drawable/tourguide"
        app:tint="#326e6c" />

    <ImageView
        android:id="@+id/imCam"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txFitur"
        app:srcCompat="@drawable/camera"
        app:tint="#326e6c" />

    <TextView
        android:id="@+id/txSpot"
        android:layout_width="93dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:shadowColor="#e5e5e5"
        android:text="@string/spot_photo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imCam"
        app:layout_constraintTop_toBottomOf="@+id/txFitur" />

    <TextView
        android:id="@+id/txIsiDesc"
        android:layout_width="381dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:text="Taman Sari Yogyakarta adalah situs bekas taman atau kebun istana Keraton Ngayogyakarta Hadiningrat, yang dapat dibandingkan dengan Taman Sari Surakarta dan Kebun Raya Bogor sebagai kebun Istana bogor"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txDesc" />

    <ImageView
        android:id="@+id/imRate"
        android:layout_width="218dp"
        android:layout_height="82dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="236dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rating"
        app:tint="#FFB13B" />

    <TextView
        android:id="@+id/txAlamat"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="268dp"
        android:text="Jl. Tamanan, Patehan, Kraton, Kota Yogyakarta"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imMaps"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="272dp"
        android:text="Rp. ##.####"
        app:layout_constraintStart_toEndOf="@+id/imCost"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imCost"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="268dp"
        app:layout_constraintStart_toEndOf="@+id/txAlamat"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cost" />

    <ImageView
        android:id="@+id/imMaps"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="272dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="193dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rect"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txIsiDesc">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:foregroundGravity="top"
            android:progressBackgroundTint="#ffffff"
            android:progressTint="#FF9800"
            android:scaleX="0.7"
            android:scaleY="0.7"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Tulis ulasan..."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btKirim"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:backgroundTint="#0c9955"
            android:text="Kirim"
            app:cornerRadius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>