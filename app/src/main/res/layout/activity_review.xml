<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewOwner">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:backgroundTint="#208F5A"
        android:layout_height="80dp"
        android:background="@drawable/rectangle"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/group_12685"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:backgroundTint="#208F5A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text=""
        android:background="@drawable/rectangle_radius"


        />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="120dp"
        android:text="Nama Pengguna" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvDeskripsi"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="188dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting ." />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="140dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/group_12686"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="190dp"
        android:background="#00FFFFFF"
        android:rotationY="-180"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/group_12685"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>